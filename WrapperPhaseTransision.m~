%%% Code to generate the phase transition plot for PCA when the noise is
%%% non-isotropic.

clear
clc

%% Generate data
n = 100;
t_max = 1000;
r = 5;
P = orth(randn(n, r));
BoundL = 5;
A = -BoundL + 2 * BoundL * rand(r, t_max);
L = P * A;

%BoundV = BoundL;
diag_entries_noise = linspace(1, 10, r);
V = zeros(n, t_max);

for ii = 1 : r
    V(ii, :) = -diag_entries_noise(ii) + ...
        2 * diag_entries_noise(ii) * rand(1, t_max);
end

Y = L + V;


%% Perform SVD for different values of \alpha and check accuracy

AlRange = 50 : 50 : 1000;

FinalSubspaceError = zeros(1, length(AlRange));
EstimatedSubspaces = cell(1, length(AlRange));


for ii = 1 : length(AlRange)
    alpha = AlRange(ii);
    
    EmpiricalCovariance = 1 / alpha * Y(:, 1: alpha) * Y(:, 1: alpha)';
    
    EstimatedSubspaces{ii} = simpleEVD(EmpiricalCovariance, r);
    
end


